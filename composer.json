{
    "name": "sweetchuck/utils",
    "description": "Common utils",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.2",
        "symfony/filesystem": "^4.1 || ^5.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "codeception/codeception": "^4.0",
        "codeception/module-asserts": "^1.1",
        "consolidation/robo": "^2.0",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.5",
        "sweetchuck/git-hooks": "^0.1",
        "sweetchuck/robo-git": "^0.3",
        "sweetchuck/robo-phpcs": "^0.2",
        "sweetchuck/robo-phpmd": "^0.2"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\Utils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\Utils\\Test\\Helper\\": "tests/_support/Helper/",
            "Sweetchuck\\Utils\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "\\Sweetchuck\\GitHooks\\Composer\\Scripts::deploy"
        ],
        "post-update-cmd": [
            "\\Sweetchuck\\GitHooks\\Composer\\Scripts::deploy"
        ],
        "clear": "rm -rf ./bin/* ./vendor/* ./tests/_output/*"
    }
}
