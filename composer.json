{
    "name": "sweetchuck/utils",
    "description": "Common utils",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "symfony/filesystem": "^4.1 || ^5.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "codeception/codeception": "^4.0",
        "codeception/module-asserts": "^1.1",
        "consolidation/robo": "^3.0",
        "mikey179/vfsstream": "^1.6",
        "phpmd/phpmd": "^2.10",
        "squizlabs/php_codesniffer": "^3.5",
        "sweetchuck/git-hooks": "2.x-dev",
        "sweetchuck/robo-git": "2.x-dev",
        "sweetchuck/robo-phpcs": "2.x-dev",
        "sweetchuck/robo-phpmd": "2.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\Utils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\Utils\\Test\\Helper\\": "tests/_support/Helper/",
            "Sweetchuck\\Utils\\Tests\\Unit\\": "tests/unit/"
        }
    },
    "scripts": {
        "clear": "rm -rf ./bin/* ./vendor/* ./tests/_output/*"
    },
    "scripts-descriptions": {}
}
